<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView android:text="@string/longitude" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/editLonLocationEntry" android:inputType="numberDecimal|numberSigned"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:text="@string/latitude"  android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <EditText android:id="@+id/editLatLocationEntry" android:inputType="numberDecimal|numberSigned"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TableLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>
            <Button android:id="@+id/btnOkLocationEntry"
                android:text="@string/ok"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <Button android:id="@+id/btnCancelLocationEntry"
                android:text="@string/cancel"
                android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

</LinearLayout>